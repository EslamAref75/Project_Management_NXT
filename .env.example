# Database Configuration
# SQLite connection format for local development: file:./dev.db
# SQLite production format: file:./path/to/production.db
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
# ⚠️ SECURITY CRITICAL: Generate a strong random secret for production
# Never use the default value below for production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Session Configuration (Optional)
# Maximum session age in seconds (default: 86400 = 24 hours)
# NEXTAUTH_SESSION_MAXAGE=86400

# Security Configuration
# Rate Limiting (Optional - configure for production)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100

# Migration: Projects API (Phase 1–5). When true, all project flows use API/backend via adapter.
# NEXT_PUBLIC_USE_PROJECTS_API=false
# Backend URL for projects (Phase 2). e.g. http://localhost:4000. Requires USE_PROJECTS_API=true. See docs/migration/phase5-cutover.md.
# NEXT_PUBLIC_PROJECTS_BACKEND_URL=
# Phase 3 shadow: when using backend, also call monolith for reads and log diffs. Set false for production.
# NEXT_PUBLIC_PROJECTS_SHADOW_MODE=false

# Migration: Tasks API (Phase 6). When true, task flows use API/backend via adapter.
# NEXT_PUBLIC_USE_TASKS_API=false
# Backend URL for tasks. e.g. http://localhost:4000. Requires USE_TASKS_API=true. See docs/migration/phase6-tasks.md.
# NEXT_PUBLIC_TASKS_BACKEND_URL=
# Optional: when using tasks backend, also call monolith for reads and log diffs.
# NEXT_PUBLIC_TASKS_SHADOW_MODE=false

# File Upload Configuration (Optional)
# Allowed MIME types (comma-separated)
# ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
# Maximum file size in bytes (default: 52428800 = 50MB)
# MAX_FILE_SIZE=52428800
